<div class="row hide-for-small">
  <div class="small-6 large-centered columns">
    {{search-box action='search' value=searchBoxValue placeholder='Enter Item Name'}}
  </div>
</div>

<div class="row">
  <div class="large-4 columns filter hide-for-small ">
    <div class="panel">
      {{product-filter }}
    </div>
  </div>
  <div class="large-8 columns">
    <div class="row">
      {{#each}}
        <div class="large-4 small-6 columns">
          {{#link-to 'product' this}}
            <img {{bind-attr src=image_url alt=name}}/>
          {{/link-to}}
          <div class="panel">
            <h5>{{name}}</h5>
            <h6 class="subheader">${{price}}</h6>
          </div>
        </div>
      {{else}}
        <p class="alert-box radius info text-center">No products found.</p>
      {{/each}}
    </div>
    {{#if products}}
      {{page-numbers content=content}}
    {{/if}}
  </div>
</div>
